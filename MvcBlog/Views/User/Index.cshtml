@model MvcBlog.Models.User
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="//netdna.bootstrapcdn.com/twitter-bootstrap/2.3.2/css/bootstrap-combined.no-icons.min.css" rel="stylesheet">
<link href="//netdna.bootstrapcdn.com/font-awesome/3.2.1/css/font-awesome.css" rel="stylesheet">

<link href="~/Content/ProfileStyle.css" rel="stylesheet" />





    <div class="row">
        <div class="span12">
            <div class="well well-small clearfix">
                <div class="row-fluid">
                    <div class="span2">
                        <img src="~/Content/images/user/@Model.PhotoUrl" class="img-polaroid" />
                    </div>
                    <div class="span4">
                        <h2><i>@Model.FullName.ToString().ToUpper()</i> </h2>
                        <ul class="unstyled">
                            <li><i class="glyphicon glyphicon-user"></i> @Model.UserName</li>
                            <li><i class="icon-envelope"></i> @Model.Mail</li>

                        </ul>
                    </div>
                    <div class="span6">
                        <ul class="inline stats">
                            <li>
                                <span>@Model.Articles.Count()</span>
                                Articles
                            </li>
                            <li>
                                <span>@Model.Comments.Count()</span>
                                Comments
                            </li>

                        </ul>
                        <div>
                            <!--/span6-->
                        </div><!--/row-->
                    </div>
                    <!--Body content-->
                </div>
            </div>

        </div>
        <a href="/User/UserDetail/@Model.Id" class="btn btn-group-sm warning">Update Profile</a>
    </div>

