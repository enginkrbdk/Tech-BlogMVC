@using MvcBlog.Models
@model List<Article>
@{
    ViewBag.Title = "Home Page";
}

<h1 class="my-4">
   Articles
    <small>♥☻☺</small>
</h1>
@foreach (var item in Model)
{


    <!-- Blog Post -->
    <div class="card mb-4">
        <img class="card-img-top" src="~/Content/images/blog/@item.ImageUrl" alt="Card image cap" />

        <div class="card-body">
            <h2 class="card-title">@item.Title</h2>

            @if (item.A_Content.Length > 100)
            {

                <p class="card-text">@item.A_Content.Substring(0,150) ...</p>
            }
            <a href="/Home/ArticleInfo/@item.Id" class="btn btn-primary">Read More &rarr;</a>
        </div>
        <div class="card-footer text-muted">
            Posted on @item.Date,
            <a href="#">@item.User.UserName.ToUpper()</a>
        </div>
    </div>
}
<!-- Pagination -->
<ul class="pagination justify-content-center mb-4">
    <li class="page-item">
        <a class="page-link" href="#">&larr; Older</a>
    </li>
    <li class="page-item disabled">
        <a class="page-link" href="#">Newer &rarr;</a>
    </li>
</ul>
